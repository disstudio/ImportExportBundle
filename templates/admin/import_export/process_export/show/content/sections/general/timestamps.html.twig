{% set resource = hookable_metadata.context.resource %}

<div class="row">
    <div class="col-12 col-md-4 fw-bold">{{ 'sylius.ui.created_at'|trans }}</div>
    <div class="col-12 col-md-8">{{ resource.createdAt|date('Y-m-d H:i:s') }}</div>
</div>

{% if resource.updatedAt %}
<div class="row">
    <div class="col-12 col-md-4 fw-bold">{{ 'sylius.ui.updated_at'|trans }}</div>
    <div class="col-12 col-md-8">{{ resource.updatedAt|date('Y-m-d H:i:s') }}</div>
</div>
{% endif %}
