<?xml version="1.0" encoding="utf-8"?>

<container
    xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd"
>
    <services>
        <service id="sylius_import_export.importer.json" class="Sylius\ImportExport\Importer\JsonImporter">
            <argument type="service" id="serializer.encoder.json" />
            <tag name="sylius.import_export.importer" format="json" />
        </service>

        <service id="sylius_import_export.importer_resolver" class="Sylius\ImportExport\Resolver\ImporterResolver">
            <argument type="tagged_locator" tag="sylius.import_export.importer" index-by="format" />
        </service>
        <service id="Sylius\ImportExport\Resolver\ImporterResolverInterface" alias="sylius_import_export.importer_resolver" />
    </services>
</container>